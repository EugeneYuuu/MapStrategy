<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <View
    android:id="@+id/paint_color_shadow"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="@id/ll_paint_color"
    app:layout_constraintEnd_toEndOf="@id/ll_paint_color"
    app:layout_constraintTop_toTopOf="@id/ll_paint_color"
    app:layout_constraintBottom_toBottomOf="@id/ll_paint_color"/>

  <LinearLayout
    android:id="@+id/ll_paint_color"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp"
    android:orientation="horizontal"
    android:visibility="gone"
    android:background="@drawable/bg_corner_8dp_white"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

  <SeekBar
    android:id="@+id/line_slider_bar"
    android:layout_width="150dp"
    android:layout_height="35dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_corner_8dp_white"
    android:visibility="gone"
    app:layout_constraintTop_toBottomOf="@id/ll_paint_color"
    app:layout_constraintEnd_toEndOf="@id/ll_paint_color"
    app:layout_constraintStart_toStartOf="@id/ll_paint_color"/>

</androidx.constraintlayout.widget.ConstraintLayout>